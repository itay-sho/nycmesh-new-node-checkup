{
    "configurations": [
        {
            "name": "Run API",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "checklink:app",
                "--reload",
            ],
            "justMyCode": true
        },
        {
            "name": "DB migration",
            "type": "python",
            "request": "launch",
            "module": "alembic",
            "cwd": "${workspaceFolder}/checklink",
            "args": [
                "upgrade",
                "head"
            ],
        }
    ]
}